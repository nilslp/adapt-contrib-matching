<div class="component__inner matching__inner" role="region" aria-label="{{_globals._components._matching.ariaRegion}}" {{#if _globals._components._matching.ariaRegion}}tabindex="0"{{/if}}>

  {{> component this}}

  <div class="component__widget matching__widget{{#unless _isEnabled}} is-disabled{{#if _isInteractionComplete}} is-complete is-submitted show-user-answer{{#if _isCorrect}} is-correct{{/if}}{{/if}}{{/unless}}">

    {{#each _items}}
    <div class="matching__item item item-{{@index}}{{#unless ../_isEnabled}}{{#if ../_canShowMarking}}{{#if _isCorrect}} is-correct{{else}} is-incorrect{{/if}}{{/if}}{{/unless}}">

      <div class="matching__item-title">
        <div class="matching__item-title_inner">
          {{{a11y_text text}}}
        </div>
      </div>

      <div class="matching__select-container">

        <div class="matching__select-state">
          <div class="matching__select-icon matching__select-correct-icon">
            <div class="icon"></div>
          </div>
          <div class="matching__select-icon matching__select-incorrect-icon">
            <div class="icon"></div>
          </div>
        </div>

        {{!-- setting width as inline styling is recommended by select2 --}}
        <select class="matching__select js-matching-select" style="width: 100%">
          {{!-- an empty <option> element is needed by select2 to allow it to do its 'placeholder' functionality --}}
          <option></option>
          {{#each _options}}
          <option {{#if _isSelected}}selected{{/if}}>
            {{text}}
          </option>
          {{/each}}
        </select>

      </div>

    </div>
    {{/each}}

  </div>

  <div class="btn__container"></div>

</div>
